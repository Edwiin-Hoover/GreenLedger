{
  "name": "greenledger",
  "version": "1.0.0",
  "description": "A decentralized carbon footprint tracking and carbon credit issuance platform",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:watch": "jest --watch",
    "test:all": "npm run test && cd contracts && npm test",
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:local": "cd contracts && npm run deploy:local",
    "deploy:testnet": "cd contracts && npm run deploy:goerli",
    "deploy:mainnet": "cd contracts && npm run deploy:mainnet",
    "verify": "hardhat verify",
    "setup": "./scripts/setup.sh",
    "docker:build": "docker build -t greenledger .",
    "docker:run": "docker run -p 3000:3000 greenledger",
    "docker:compose": "docker-compose up -d",
    "clean": "rm -rf .next out build dist coverage node_modules/.cache"
  },
  "keywords": [
    "blockchain",
    "carbon-credits",
    "sustainability",
    "web3",
    "nft",
    "defi"
  ],
  "author": "GreenLedger Team",
  "license": "MIT",
  "dependencies": {
    "next": "^13.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "wagmi": "^1.4.0",
    "@rainbow-me/rainbowkit": "^1.0.0",
    "ethers": "^5.7.0",
    "viem": "^1.4.0",
    "@tanstack/react-query": "^4.29.0",
    "axios": "^1.4.0",
    "ipfs-http-client": "^56.0.0",
    "chart.js": "^4.3.0",
    "react-chartjs-2": "^5.2.0",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "lucide-react": "^0.263.0",
    "clsx": "^1.2.0",
    "class-variance-authority": "^0.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "typescript": "^5.1.0",
    "eslint": "^8.45.0",
    "eslint-config-next": "^13.4.0",
    "jest": "^29.6.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^5.17.0",
    "hardhat": "^2.16.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@openzeppelin/contracts": "^4.9.0"
  }
}
